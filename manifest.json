{
    "manifest_version": 3,
    "name": "Worktronics Browser Automation",
    "version": "2306.27.0",
    "icons": {
      "16": "icons/recIcon_default16.png",
      "64": "icons/recIcon_default64.png",
      "48": "icons/recIcon_default48.png",
      "128": "icons/recIcon_default128.png"
    },
    "action": {
      "default_icon": "icons/recIcon_default64.png",
      "default_title": "이든티앤에스 웹레코더"
    },
    "background" : {
        "service_worker" : "src/ServiceWorker.ts",
        "type" : "module"
    },
    "content_scripts": [
        {
          "matches": ["*://*/*"],
          "js":["src/ContentScript.ts","node_modules/@webcomponents/custom-elements/custom-elements.min.js"],
          "match_origin_as_fallback": true,
          "all_frames" : true,
          "runAt" : "document_start"
        }
    ],
    "devtools_page" : "src/DevToolsPlugin.html",
    "permissions": [
        "activeTab",
        "tabs",
        "unlimitedStorage",
        "storage",
        "contextMenus",
        "webNavigation",
        "scripting",
        "notifications",
        "nativeMessaging",
        "background",
        "debugger"
    ],
    "host_permissions": [
        "<all_urls>"
      ],
    "externally_connectable": {
        "matches": [
          "*://localhost/*",
          "*://*.digitalworker.co.kr/*",
          "*://10.0.1.112/*"
      ]
    }
}