{
    "manifest_version": 3,
    "name": "CRX DOPE",
    "version": "1.0.0",
    "action": { },
    "background" : {
        "service_worker" : "src/ServiceWorker.ts",
        "type" : "module"
    },
    "content_scripts": [
        {
          "matches": ["*://*/*"],
          "js":["src/ContentScript.ts"],
          "match_origin_as_fallback": true,
          "all_frames" : true,
          "runAt" : "document_start"
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "unlimitedStorage",
        "storage",
        "contextMenus",
        "webNavigation",
        "scripting",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
      ],
    "externally_connectable": {
        "matches": [
          "*://localhost/*",
          "*://*.digitalworker.co.kr/*",
          "*://10.0.1.112/*"
      ]
    }
}