{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "chrome",
            "vuetify",
            "vite/client",
            "vue-router"
        ],
        "paths": {
            "@/*": ["src/*"],
            "tslib" : ["path/to/node_modules/tslib/tslib.d.ts"],
            "@CrxClass/*" : ["src/ts/class/*"],
            "@CrxApi" : ["src/ts/api/CrxApi.ts"],
            "@CrxConstants" : ["src/ts/constants/CrxConstants.ts"],
            "@CrxInterface" : ["src/ts/interface/CrxInterface.ts"],            
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "resolveJsonModule": true,
        "removeComments": true, //컴파일시 주석제거
        "noUnusedLocals": false, //쓰지않는 지역변수 있으면 에러내기
        "noUnusedParameters": false, //쓰지않는 파라미터 있으면 에러내기
        "noImplicitAny": false,
        "strictNullChecks": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "src/main.ts",
        "src/DevToolsPlugin.js"
    ],
    "exclude": [
        "node_modules"
    ]
}